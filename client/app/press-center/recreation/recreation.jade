ion-view(pc-mouse-wheel)
  ion-pane
    .apax-pc.recreation
      .gray.event EVENT
      .gray.live LIVE
      .gray.curr.recreation RECREATION
      ul.dot
        li
          a(href='#/tab/press-center/event')
        li
          a(href='#/tab/press-center/live')
        li(class='curr')
          a(href='#/tab/press-center/recreation')

      .annual
        section(ng-repeat='data in datas', ng-style='{"animation-delay": ($index * 0.3 + 1) + "s"}')
          .year {{ data.year }}
          ul
            li(ng-repeat='archive in data.archives')
              p {{ archive.title }}
              p
                span.download(ng-click='leaveMsg(archive.url)') DOWNLOAD PDF


      // recreation
      spotlight(triangle-color='#a40ebb', incline-qty='3', incline-x='10deg', incline-width='5', incline-height='8', spotlight-z='120deg', spotlight-x='2deg', spotlight-left='645', spotlight-top='95', spotlight-opacity='0.8')
